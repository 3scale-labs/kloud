apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  labels:
    app: {{ APP_LABEL }}
    threescale_component: backend
  name: backend
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /
spec:
  rules:
  - host: backend-{{ TENANT_NAME }}.{{ WILDCARD_DOMAIN }}
    http:
      paths:
      - path: /
        backend:
          serviceName: backend-listener
          servicePort: 3000




